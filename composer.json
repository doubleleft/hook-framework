{
  "name": "doubleleft/hook-platform",
  "description": "Hook Platform",
  "keywords": ["hook", "platform", "doubleleft"],
  "license": "MIT",
  "authors": [{
    "name": "Endel Dreyer",
    "email": "edreyer@doubleleft.com"
  }],
  "autoload": {
    "classmap": ["app/controllers"],
    "psr-0": {
      "Hook\\Platform": "src",
      "Hook\\CMS": "src",
      "Hook\\Admin": "src"
    }
  },
  "repositories": [{
    "type": "git",
    "url": "https://github.com/doubleleft/hook.git"
  }],
  "require": {
    "php": ">=5.3.0",
    "doubleleft/hook": "dev-dev",
    "zordius/lightncandy": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "3.7.*"
  },
  "scripts": {
    "post-install-cmd": [
      "Hook\\Platform\\Installer::assets"
    ]
  },
  "bin-dir": "bin",
  "minimum-stability": "dev"
}
