    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        {{#form method="post" role="form"}}
                            <fieldset>
                                <div class="form-group">
                                    {{ input "email" placeholder="E-mail" class="form-control" autofocus=true }}
                                </div>
                                <div class="form-group">
                                    {{ input "password" placeholder="Password" class="form-control" value="" }}
                                </div>
                                <div class="checkbox">
                                    <label>
                                      {{ input "remember" type="checkbox" value="1" }} Remember Me
                                    </label>
                                </div>
                                {{ input type="submit" class="btn btn-lg btn-success btn-block" value="Login" }}
                            </fieldset>
                        {{/form}}
                    </div>
                </div>
            </div>
        </div>
    </div>
